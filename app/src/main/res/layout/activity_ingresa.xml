<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.adrian.appe.FormularioGeneral">

                 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                     <!--Botón Verificado -->
                <Button
                    android:id="@+id/btn_Verificado_Ingresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/holo_orange_light"
                    android:text="@string/Verificado"
                    android:textColor="@android:color/background_light"
                    android:textStyle="bold" />
                     <!--Botón Ingresa -->
                <Button
                    android:id="@+id/btn_Ingresa_Ingresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/holo_orange_dark"
                    android:text="@string/Ingresa"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />
                     <!--Botón Registro-->
                <Button
                    android:id="@+id/btn_Registro_Ingresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/holo_red_light"
                    android:text="@string/Registro"
                    android:textColor="@android:color/background_light"
                    android:textStyle="bold" />

                     <!--SUB SECCIÓN INICIAR SESIÓN -->
            </LinearLayout>

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                   <!--Título Iniciar sesión -->
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/Iniciar_sesion"
                       android:textAlignment="center"
                       android:textAllCaps="false"
                       android:textColor="@android:color/black"
                       android:textSize="24sp"
                       android:textStyle="bold" />

               <android.support.v4.widget.Space
                   android:layout_width="wrap_content"
                   android:layout_height="20dp" />

                   <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                       <!--Texto Usuario -->
                       <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Usuario"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:textColor="@android:color/black"/>
                       <!--Ingresar Usuario -->
                       <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_Usuario_Ingresa"/>
                </LinearLayout>

                   <android.support.v4.widget.Space
                       android:layout_width="wrap_content"
                       android:layout_height="10dp" />

                   <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                       <!--Texto Contraseña -->
                       <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Contraseña"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:textColor="@android:color/black"/>
                       <!--Ingresar Contraseña -->
                       <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_Contraseña_Ingresa"
                        android:inputType="textPassword"/>

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

