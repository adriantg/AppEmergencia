<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.adrian.appe.Web">

            <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Institución 1"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_weight="5"/>

                <Button
                    android:id="@+id/btn_Regresar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_menu_revert"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--SECCIÓN DATOS DE CONTACTO-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Datos_de_contacto"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <!--Dirección Web-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Direccion_web"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_Direccion_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--Teléfonos-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Correo_electronico"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_Correo_electronico_Institución1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--Facebook-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Facebook"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_Facebook_Institucion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--Twitter-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Twitter"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/txt_Twitter_Institucion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <!--SECCIÓN COMUNICADOS-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Comunicados"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:id="@+id/recycler_Web_Institucion1">
             <android.support.v7.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="300dp"
                 app:cardBackgroundColor="@color/cardview_light_background"
                 app:cardCornerRadius="4dp"
                 app:cardElevation="4dp">

                 <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">


                   <!--Título-->
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/Titulo"
                           android:textAllCaps="false"
                           android:textColor="@android:color/black"
                           android:textSize="16sp"
                           android:textStyle="normal" />
                       <TextView
                           android:id="@+id/txt_Titulo_Comunicado_Web"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                   </LinearLayout>

                   <!--Hora-->
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/Hora"
                           android:textAllCaps="false"
                           android:textColor="@android:color/black"
                           android:textSize="16sp"
                           android:textStyle="normal" />
                       <TextView
                           android:id="@+id/txt_Hora_Comunicado_Web"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                   </LinearLayout>

                   <!-- Imagen
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/Imagen"
                           android:textAllCaps="false"
                           android:textColor="@android:color/black"
                           android:textSize="16sp"
                           android:textStyle="normal" />
                       <TextView
                           android:id="@+id/txt_Imagen_Comunicado1_Web"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                   </LinearLayout>   -->

                   <!--Descripción-->
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/Descripcion"
                           android:textAllCaps="false"
                           android:textColor="@android:color/black"
                           android:textSize="16sp"
                           android:textStyle="normal" />
                       <TextView
                           android:id="@+id/txt_Descripcion_Comunicado_Web"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                   </LinearLayout>

                   <!--Liga de internet-->
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/Liga"
                           android:textAllCaps="false"
                           android:textColor="@android:color/black"
                           android:textSize="16sp"
                           android:textStyle="normal" />
                       <TextView
                           android:id="@+id/txt_Liga_Comunicado_Web"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />
                   </LinearLayout>



               </LinearLayout>
             </android.support.v7.widget.CardView>
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

